<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageButton
        android:id="@+id/basicinfo_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/basicinfo_edit_profile_height" />

    <EditText
        android:id="@+id/basicinfo_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/basicinfo_edit_name"/>

    <EditText
        android:id="@+id/basicinfo_edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/basicinfo_edit_email"/>
</LinearLayout>