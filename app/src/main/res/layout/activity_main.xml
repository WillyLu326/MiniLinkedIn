<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="willy.individual.com.minilinkedinapp.MainActivity">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_margin">

        <!-- User Profile Component -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/profile_image">
                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:textSize="@dimen/title_size"/>
                <ImageButton
                    android:id="@+id/profile_edit_btn"
                    android:layout_width="@dimen/action_button_size"
                    android:layout_height="@dimen/action_button_size"
                    android:layout_marginLeft="@dimen/activity_sub_margin"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_mode_edit_black_18dp"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="@string/image_button_description"/>
            </LinearLayout>

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile"
                android:layout_marginTop="@dimen/activity_sub_margin"
                android:layout_toLeftOf="@+id/profile_image"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/content_size"
                tools:text="@string/user_email"/>

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/profile_image_size"
                android:layout_height="@dimen/profile_image_size"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_account_circle_black_48dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/image_button_description" />
        </RelativeLayout>
        <!-- Profile  End -->


        <!-- Education Component -->
        <LinearLayout
            android:id="@+id/education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_marginBottom="@dimen/activity_sub_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/education"
                android:textSize="@dimen/title_size"
                android:textAllCaps="true"/>

            <ImageButton
                android:id="@+id/education_add_btn"
                android:layout_width="@dimen/action_button_size"
                android:layout_height="@dimen/action_button_size"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_add_black_18dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/image_button_description" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/educations_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
        <!-- Education End -->


        <!-- Experience Component -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_sub_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/experience"
                android:textSize="@dimen/title_size"
                android:textAllCaps="true"/>

            <ImageButton
                android:id="@+id/experience_add_btn"
                android:layout_width="@dimen/action_button_size"
                android:layout_height="@dimen/action_button_size"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_add_black_18dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/image_button_description" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/experiences_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
        <!-- Experience End -->


        <!-- Project Component -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_sub_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/project"
                android:textSize="@dimen/title_size"
                android:textAllCaps="true"/>

            <ImageButton
                android:layout_width="@dimen/action_button_size"
                android:layout_height="@dimen/action_button_size"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_add_black_18dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/image_button_description" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_sub_margin"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/introduction"/>
                <ImageButton
                    android:layout_width="@dimen/action_button_size"
                    android:layout_height="@dimen/action_button_size"
                    android:src="@drawable/ic_mode_edit_black_18dp"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="@string/image_button_description" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/content"/>
        </LinearLayout>
        <!-- Project End -->

    </LinearLayout>
</ScrollView>
